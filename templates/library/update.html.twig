{% extends "base-game.html.twig" %}

{% block title %}Update{% endblock %}

{% block body %}
    <h1>Update book in library</h1>

    <form class="label-left" method="post" action="{{ path('library_update_post') }}">
        <fieldset>
            <legend>Update book details</legend>

            <label for="id">ID</label>
            <input id="id" type="text" name="id" readonly value="{{ id }}">

            <label for="title">Title</label>
            <input id="title" type="text" name="title" value="{{ title }}">

            <label for="isbn">ISBN</label>
            <input id="isbn" type="text" name="isbn" value="{{ isbn }}">

            <label for="author">Author</label>
            <input id="author" type="text" name="author" value="{{ author }}">

            <label for="image">Image</label>
            <input id="image" type="text" name="image" value="{{ image }}">

            <input type="submit" name="doit" value="Update">
        </fieldset>
    </form>
{% endblock %}
