{% extends "base-ps.html.twig" %}

{% block title %}Poker squares JSON routes{% endblock %}

{% block body %}
    <h1>Poker squares JSON routes</h1>

    <div class="api-div">
        <h2>Highscore</h2>
        <p>High score list.</p>
        <a href="{{ path('json_highscore') }}"><button class="button">High score</button></a>
    </div>

    <div class="api-div">
        <h2>Current columns</h2>
        <p>Shows all current columns with column ID and card (or null if not set yet).</p>
        <a href="{{ path('json_columns') }}"><button class="button">Columns </button></a>
    </div>

    <div class="api-div">
        <h2>Current rows</h2>
        <p>Shows all current rows with row ID and card (or null if not set yet).</p>
        <a href="{{ path('json_rows') }}"><button class="button">Rows </button></a>
    </div>

    <div class="api-div">
        <h2>Card deck (shuffled)</h2>
        <p>Shows card deck shuffled.</p>
        <form method="post" action="{{ path('json_shuffle') }}">
            <input type="submit" name="do_it" value="Shuffle" class="button">
        </form>
    </div>

    <div class="api-div">
        <h2>Card deck (shuffled)</h2>
        <p>Shows card deck shuffled.</p>
        <form method="post" action="{{ path('json_shuffle') }}">
            <input type="submit" name="do_it" value="Shuffle" class="button">
        </form>
    </div>

{% endblock %}
