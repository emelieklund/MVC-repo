{% extends "base2.html.twig" %}

{% block title %}Session{% endblock %}

{% block body %}
<h1>Session</h1>


{% for key in session_all|keys %}
    <p>{{ key }}:</p>
{% endfor %}

<div class="suit-div">
    {% for card in deck_session %}
        {% if '♥' in card or '♦' in card %}
            <p style="color:red">{{ card }}</p>
        {% else %}
            <p>{{ card }}</p>
        {% endif %}
    {% endfor %}
</div>

<a href="{{ path('session_delete') }}"><button class="button">Clear session</button></a>

{{ include('flash.html.twig') }}

{% endblock %}
