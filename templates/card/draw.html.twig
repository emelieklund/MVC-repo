{% extends "base2.html.twig" %}

{% block title %}Draw{% endblock %}

{% block body %}

<h1>Draw a card</h1>

<div class="suit-div">
    {% if '♥' in draw or '♦' in draw%}
        <p style="color:red">{{ draw }}</p>
    {% else %}
        <p>{{ draw }}</p>
    {% endif %}
</div>

<p>Number of cards left: {{ cards_left }}</p>

<form method="post" action="">
    <input type="submit" name="draw" value="Draw" class="button"
        onClick="this.form.action='{{ path('draw') }}';"
    >
</form>

{% endblock %}
